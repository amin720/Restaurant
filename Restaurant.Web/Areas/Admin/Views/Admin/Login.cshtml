<body>
    <!-- Full Background -->
    <!-- For best results use an image with a resolution of 1280x1280 pixels (prefer a blurred image for smaller file size) -->
    <img src="~/Areas/Admin/Content/img/placeholders/layout/login2_full_bg.jpg" alt="Full Background" class="full-bg animation-pulseSlow">
    <!-- END Full Background -->
    <!-- Login Container -->
    <div id="login-container" dir="rtl">
        <!-- Login Header -->
        <h1 class="h2 text-light text-center push-top-bottom animation-pullDown">
            <i class="fa fa-cube text-light-op"></i> <strong>AppUI</strong>
        </h1>
        <!-- END Login Header -->
        <!-- Login Block -->
        <div class="block animation-fadeInQuick">
            <!-- Login Title -->
            <div class="block-title">
                <h2>لطفا وارد شوید</h2>
            </div>
            <!-- END Login Title -->
            <!-- Login Form -->
            @*            <form id="form-login" action="index.html" method="post" class="form-horizontal">*@
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-horizontal", @id = "form-login" }))
            {
                @Html.AntiForgeryToken();

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="UserName" class="col-xs-12">نام کاربری</label>
                    <div class="col-xs-12">
                        <input type="text" id="UserName" name="UserName" class="form-control" placeholder="نام کاربری شما..">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-xs-12">کلمه عبور</label>
                    <div class="col-xs-12">
                        <input type="password" id="Password" name="Password" class="form-control" placeholder="کلمه عبور شما..">
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-xs-8">
                        <label class="csscheckbox csscheckbox-primary">
                            <input type="checkbox" id="Remmeberme" name="Remmeberme"><span></span> مرا به خاطر بسپار
                        </label>

                    </div>
                    <div class="col-xs-4 text-right">
                        <button type="submit" class="btn btn-effect-ripple btn-success">وارد شدن</button>
                    </div>
                </div>}
            <div class="form-group form-actions">
                <label>
                    <a href="@Url.Action("Forgotpassword","Admin")" id="forgot-password" name="forgot-password"><span></span> رمز عبور خود را فراموش کردید؟</a>
                </label>
            </div>
            @*            </form>*@
            <!-- END Login Form -->

        </div>
        <!-- END Login Block -->
        <!-- Footer -->
        <footer class="text-muted text-center animation-pullUp">
            <small><span id="year-copy"></span> &copy; <a href="http://goo.gl/RcsdAh" target="_blank">AppUI 2.7</a></small>
        </footer>
        <!-- END Footer -->
    </div>
    <!-- END Login Container -->
    <!-- jQuery, Bootstrap, jQuery plugins and Custom JS code -->
    <script src="~/Areas/Admin/Scripts/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="~/Areas/Admin/Scripts/js/vendor/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Scripts/js/plugins.js"></script>
    <script src="~/Areas/Admin/Scripts/js/app.js"></script>

    <!-- Load and execute javascript code used only in this page -->
    <script src="~/Areas/Admin/Scripts/js/pages/readyLogin.js"></script>
    <script>
    $(function () {
        ReadyLogin.init();
    });
    </script>
</body>

</html>
