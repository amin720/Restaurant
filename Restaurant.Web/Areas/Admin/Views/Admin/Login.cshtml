    <link rel="apple-touch-icon" href="~/Areas/Admin/Content/img/icon144.png" sizes="144x144">
    <link rel="apple-touch-icon" href="~/Areas/Admin/Content/img/icon152.png" sizes="152x152">
    <link rel="apple-touch-icon" href="~/Areas/Admin/Content/img/icon180.png" sizes="180x180">
    <!-- END Icons -->
    <!-- Stylesheets -->
    <!-- Bootstrap is included in its original form, unaltered -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/bootstrap.rtl.min.css">

    <!-- Related styles of various icon packs and plugins -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/plugins.css">

    <!-- The main stylesheet of this template. All Bootstrap overwrites are defined in here -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/main.css">

